<configuration>
<property name="LOG_PATTERN" value="%d{yyyy-MM-dd' 'HH:mm:ss.SSSZ} %p  ---  [%t]  %m%n" />
  <property name="APP_LOG_ROOT" value="c:/anganwadiLog"/>
   <property name="CURRENT_DATE" value="%d{yyyy-MM-dd}"></property>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
          <pattern>${LOG_PATTERN}</pattern>
      </encoder>
    </appender>
 
  <appender name="logData" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
    
 	<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
          <fileNamePattern>${APP_LOG_ROOT}/logData-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
          <maxFileSize>10MB</maxFileSize>
          <maxHistory>35</maxHistory>
          <totalSizeCap>1000MB</totalSizeCap>
     </rollingPolicy> 
    
  </appender>
  
  <logger name="com.anganwadi" level="DEBUG">
    <appender-ref ref="logData" />
    <appender-ref ref="console" />
  </logger>
   
  <root level="info">
      <appender-ref ref="console" />
      <appender-ref ref="logData"/>
   </root>
  
</configuration>
  